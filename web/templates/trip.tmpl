</div>  
{{end}}

{{block "schedule" .}}
  Who's coming when
  <div class="overflow-x-auto">
    <table class="table table-zebra table-xs table-pin-rows table-pin-cols">
      <thead>
        <th scope="col"></th>
        {{range .Users}}
        <th scope="col">{{.Name}}</th>
        {{ end }}
      </thead>
      <tbody>
        {{range $date := .Dates}}
        <tr>
          <th scope="row">{{.}}</th>
          {{range $user := $.Users}}
          <td><input type="checkbox" name="user{{$user.Id}}_{{$date}}"></td>
          {{end}}
        </tr>
        {{end}}
      </tbody>
    </table>
  </div>
{{end}}

