{{block "trip" . }}
<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <title>tripwiser</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer type="text/javascript" src="/static/js/alpinejs_3_14_1.min.js"></script>
    <script src="/static/js/tailwind_3_4_5.es"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/daisyui_4_10_2.full.min.css" />
    <script type="text/javascript" src="/static/js/htmx_1_9_12.min.js"></script>
  </head>
  <body
    x-data="{ tabSelected: 1 }">
    {{template "trip_detail" .}}
  </body>
</html>
{{end}}

{{block "trip_detail" .}}
<div
      x-data="{
          tabId: $id('tabs'),
          tabClicked(tab){
              this.tabSelected = tab.id.replace(this.tabId + '-', '');
              this.tabRepositionMarker(tab);
          },
          tabRepositionMarker(tab){
              this.$refs.tabMarker.style.width=tab.offsetWidth + 'px';
              this.$refs.tabMarker.style.height=tab.offsetHeight + 'px';
              this.$refs.tabMarker.style.left=tab.offsetLeft + 'px';
          },
          tabContentActive(tabContent){
              return this.tabSelected == tabContent.id.replace(this.tabId + '-content-', '');
          },
          tabActive(tabContent){
              const tabId = tabContent.id.split('-').slice(-1);
              return this.tabSelected == tabId;
          }
        }"
      x-init="tabRepositionMarker($refs.tabs.firstElementChild);"
      class="relative w-full"
      id="trip">

      <div x-ref="tabs" class="relative inline-grid items-center justify-center w-full h-10 grid-cols-4 p-1 text-gray-500 bg-white border border-gray-100 rounded-lg select-none">
          <a :id="$id(tabId)" @click="tabClicked($el);" :class="{ 'bg-gray-100 text-gray-700' : tabActive($el) }" class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 font-medium transition-all rounded-md cursor-pointer whitespace-nowrap">Overview</a>
          <a :id="$id(tabId)" @click="tabClicked($el);" :class="{ 'bg-gray-100 text-gray-700' : tabActive($el) }" class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 font-medium transition-all rounded-md cursor-pointer whitespace-nowrap">Schedule</a>
          <a :id="$id(tabId)" @click="tabClicked($el);" :class="{ 'bg-gray-100 text-gray-700' : tabActive($el) }" class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 font-medium transition-all rounded-md cursor-pointer whitespace-nowrap">Expenses</a>
      </div>
      <div class="relative flex items-center w-full p-5 mt-2 border rounded-md content border-gray-200/70">
        <div :id="$id(tabId + '-content')" x-show="tabContentActive($el)" class="relative">
          {{ template "trip_overview" . }}
        </div>

        <div :id="$id(tabId + '-content')" x-show="tabContentActive($el)" class="relative">
          {{ template "schedule" . }}
        </div>

        <div :id="$id(tabId + '-content')" x-show="tabContentActive($el)" class="relative" x-cloak>
          {{ template "expenses" . }}
        </div>

      </div>
    </div>

{{end}}

{{block "trip_overview" .}}
<div class="space-y-6">
  <!-- Trip Details Card -->
  <div class="card bg-base-100 shadow-sm border border-gray-200/70">
    <div class="card-body">
      <h3 class="card-title text-lg mb-4">Trip Details</h3>
      <form class="space-y-4" hx-post="/t/{{.Trip.Id}}" hx-target="#trip" hx-swap="innerHTML">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Trip name</span>
          </label>
          <input 
            type="text" 
            name="TripName" 
            class="input input-bordered w-full" 
            placeholder="Enter trip name"
            {{ if .Trip.Name }} value="{{ .Trip.Name }}" {{ end }} />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text">Start date</span>
            </label>
            <input 
              type="date" 
              name="StartDate" 
              class="input input-bordered w-full"
              value="{{formatTime .Trip.StartDate}}" />
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">End date</span>
            </label>
            <input 
              type="date" 
              name="EndDate" 
              class="input input-bordered w-full"
              value="{{formatTime .Trip.EndDate}}" />
          </div>
        </div>

        <div class="card-actions justify-end">
          <button class="btn btn-primary" type="submit">Update Trip</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Friends Card -->
  <div class="card bg-base-100 shadow-sm border border-gray-200/70">
    <div class="card-body">
      <h3 class="card-title text-lg mb-4">Friends</h3>
      
      {{if .Users}}
      <div class="space-y-2 mb-4">
        {{range .Users}}
        <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
          <span class="font-medium">{{.Name}}</span>
          <button 
            hx-delete="/t/{{$.Trip.Id}}/u/{{.Id}}" 
            hx-target="#trip" 
            hx-swap="innerHTML"
            hx-confirm="Remove {{.Name}} from this trip?"
            class="btn btn-ghost btn-sm text-error hover:bg-error hover:text-error-content">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>
        {{end}}
      </div>
      {{else}}
      <div class="text-center py-6 text-gray-500">
        <p>No friends added yet</p>
      </div>
      {{end}}

      <form hx-post="/t/{{.Trip.Id}}/u" hx-target="#trip" hx-swap="innerHTML">
        <div class="join w-full">
          <input 
            class="input input-bordered join-item flex-1" 
            type="text" 
            name="name" 
            placeholder="Add a friend"
            required />
          <button class="btn btn-primary join-item" type="submit">Add Friend</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{end}}

{{block "schedule" .}}
<div class="card bg-base-100 shadow-sm border border-gray-200/70">
  <div class="card-body">
    <h3 class="card-title text-lg mb-4">Schedule & Availability</h3>
    
    {{if .Users}}
    <form hx-post="/t/{{.Trip.Id}}/s" hx-target="#trip" hx-swap="innerHTML">
      <div class="overflow-x-auto mb-4">
        <table class="table table-zebra table-xs table-pin-rows table-pin-cols">
          <thead>
            <tr>
              <th scope="col" class="bg-base-200">Date</th>
              {{range .Users}}
              <th scope="col" class="bg-base-200 text-center">{{.Name}}</th>
              {{end}}
            </tr>
          </thead>
          <tbody>
            {{range $date := dateRange .Trip.StartDate .Trip.EndDate}}
            <tr>
              <th scope="row" class="font-medium">{{formatTime $date}}</th>
              {{range $user := $.Users}}
              {{$isBooked := $.IsBooked $user $date}}
              <td class="text-center">
                <input 
                  type="checkbox" 
                  class="checkbox checkbox-sm checkbox-primary" 
                  autocomplete="off" 
                  name="{{concatUserDate $user $date}}" 
                  {{if $isBooked }}checked{{end}} />
              </td>
              {{end}}
            </tr>
            {{end}}
          </tbody>
        </table>
      </div>
      
      <div class="card-actions justify-end">
        <button class="btn btn-primary" type="submit">Update Schedule</button>
      </div>
    </form>
    {{else}}
    <div class="text-center py-8 text-gray-500">
      <p>Add friends first to manage the schedule</p>
      <p class="text-sm mt-2">Go to the Overview tab to add friends to this trip</p>
    </div>
    {{end}}
  </div>
</div>
{{end}}

{{block "expenses" .}}
<div class="space-y-6">
  <!-- Add Expense Card -->
  <div class="card bg-base-100 shadow-sm border border-gray-200/70">
    <div class="card-body">
      <h3 class="card-title text-lg mb-4">Add New Expense</h3>
      
      {{if .Users}}
      <form hx-post="/t/{{.Trip.Id}}/e" hx-target="#trip" hx-swap="innerHTML">
        <div class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Description</span>
              </label>
              <input 
                type="text" 
                class="input input-bordered w-full" 
                name="description" 
                placeholder="Enter description" 
                required />
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text">Amount</span>
              </label>
              <input 
                type="number" 
                class="input input-bordered w-full" 
                name="amount" 
                placeholder="0.00" 
                min="0.01" 
                step="0.01" 
                required />
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text">Date</span>
              </label>
              <input 
                type="date" 
                class="input input-bordered w-full" 
                name="date" 
                value="{{formatTime now}}" 
                required />
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text">Who paid?</span>
              </label>
              <select name="paidBy" class="select select-bordered w-full" required>
                <option value="">Select person</option>
                {{range .Users}}
                <option value="{{.Id}}">{{.Name}}</option>
                {{end}}
              </select>
            </div>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Split among</span>
            </label>
            <div class="flex flex-wrap gap-3">
              {{range .Users}}
              <label class="label cursor-pointer">
                <input 
                  type="checkbox" 
                  name="participants" 
                  value="{{.Id}}" 
                  class="checkbox checkbox-primary checkbox-sm mr-2" />
                <span class="label-text">{{.Name}}</span>
              </label>
              {{end}}
            </div>
          </div>

          <div class="card-actions justify-end">
            <button class="btn btn-primary" type="submit">Add Expense</button>
          </div>
        </div>
      </form>
      {{else}}
      <div class="text-center py-6 text-gray-500">
        <p>Add friends first to track expenses</p>
        <p class="text-sm mt-2">Go to the Overview tab to add friends to this trip</p>
      </div>
      {{end}}
    </div>
  </div>

  <!-- Expenses List Card -->
  <div class="card bg-base-100 shadow-sm border border-gray-200/70">
    <div class="card-body">
      <h3 class="card-title text-lg mb-4">Expense History</h3>
      
      {{if .Expenses}}
      <div class="overflow-x-auto">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th class="text-right">Amount</th>
              <th class="text-right">Paid By</th>
              <th class="text-right">Participants</th>
            </tr>
          </thead>
          <tbody>
            {{range .Expenses}}
            <tr>
              <td class="font-medium">{{formatTime .Date}}</td>
              <td>{{.Description}}</td>
              <td class="text-right font-mono">${{.Amount}}</td>
              <td class="text-right">{{.PaidBy.Name}}</td>
              <td class="text-right">
                <div class="text-sm">
                  {{range $i, $participant := .Participants}}
                    {{if $i}}, {{end}}{{$participant.Name}}
                  {{end}}
                </div>
              </td>
            </tr>
            {{end}}
          </tbody>
        </table>
      </div>
      {{else}}
      <div class="text-center py-8 text-gray-500">
        <p>No expenses recorded yet</p>
        <p class="text-sm mt-2">Add your first expense above to get started</p>
      </div>
      {{end}}
    </div>
  </div>
</div>
{{end}}
